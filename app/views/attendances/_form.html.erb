<div class="input-group py-3 justify-content-center">
  <%= form_with(model: @attendance) do |f| %>
    <div class="py-3">
       <input class="form-control" type="search" placeholder="Phone Number" name="phone_number" aria-label="Search">
    </div>
    <div class="py-3">
      <%= f.text_field :body_temperature, class: "form-control", placeholder: "Temperature" %>
    </div>
    <div class="py-3">
      <%= f.submit 'Check In', class: "btn btn-secondary text-white" %>
    </div>
  <% end %>
</div>
