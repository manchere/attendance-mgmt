<%= form_tag(search_page_path, method: :get) do %>
  <div class="row">
    <div class="col-md-12">
      <div class="input-group mb-3">
        <%= search_field_tag :search, params[:search], placeholder: 'Search Users', class: 'form-control' %>
        <div class>
          <%= button_tag class: 'btn btn-secondary text-white', id: 'search_btn', name: nil do %>
            Search
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
