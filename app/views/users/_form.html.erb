<div class="new-user-container">
  <%= form_with(model: user) do |f| %>
    <% if user.errors.any? %>
      <div class="text-danger">
        <% user.errors.each do |error| %>
          <%= error.full_message %></p>
      <% end %>
    </div>
  <% end %>
  <div class="input-group py-3">
    <span class="input-group-text">First and last name</span>
    <%= f.text_field :first_name, class: "form-control" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="py-3">
    <%= f.text_field :phone_number, class: "form-control", placeholder: "phone number" %>
  </div>
  <div class="py-3">
    <%= f.text_area :address, class: "form-control", placeholder: "address" %>
  </div>
  <div class="py-3">
    <%= f.submit 'Create user', class: "btn btn-secondary text-white" %>
  </div>
<% end %>
</div>
