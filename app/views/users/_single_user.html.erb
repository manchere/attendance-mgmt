<div class="media text-muted pt-3">
  <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
  <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray bg-light p-2">
    <div class="d-flex justify-content-between align-items-center w-100">
      <strong class="text-dark">ID: <%= user.sluggish_id %></strong>
      <h6><strong class="text-dark"><%= user.full_name %></strong></h6>
      <div>
        <%= link_to 'View Profile', user_path(user.id), class: 'text-dark' %> |
        <%= link_to 'View Attendances', user_attendances_url(user.id), class: 'text-dark' %>
      </div>
    </div>
    <span class="d-block">Latest Check In: <%= user.attendances.first.datetime_of_presence.strftime('%d-%m-%Y %H:%M:%S') %> </span>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Address</th>
          <th scope="col">Overall Attendance</th>
          <th scope="col">Last Body Temperature</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= user.address %></td>
          <td><%= user.attendances.total_attendance(user.id) %></td>
          <td><%= user.attendances.first.body_temperature %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
